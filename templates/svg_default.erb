<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="<%= image_width %>" height="20">
  <linearGradient id="smooth" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>

  <mask id="round">
    <rect width="<%= image_width %>" height="20" rx="3" fill="#fff"/>
  </mask>

  <g mask="url(#round)">
    <rect width="<%= status_param_width %>" height="20" fill="<%= fetch_color_hex(image_colour) %>"/>
    <rect x="<%= status_param %>" width="<%= status_param_width %>" height="20" fill="<%= fetch_color_hex(image_colour) %>"/>
    <rect width="<%= image_width %>" height="20" fill="url(#smooth)"/>
  </g>

  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <% if logo_param.present? %>
      <image x="5" y="3" width="<%= logo_width %>" height="14" xlink:href="<%= logo_param %>"/>
    <% end %>
    <text x="<%= (status_param_width + logo_width+ logo_padding)/2 %>" y="15" fill="#010101" fill-opacity=".3"><%= status_param %></text>
    <text x="<%= (status_param_width + logo_width+ logo_padding)/2 %>" y="14"><%= status_param %></text>
    <text x="<%= (status_param_width + formatted_downloads_width/2 -1) %>" y="15" fill="#010101" fill-opacity=".3"><%= format_number_of_downloads %></text>
    <text x="<%= (status_param_width + formatted_downloads_width/2 -1) %>" y="14"><%= format_number_of_downloads %></text>
  </g>
</svg>
