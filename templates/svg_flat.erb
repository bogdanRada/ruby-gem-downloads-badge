<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="<%= image_width %>" height="20">
  <linearGradient id="smooth" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>
  <mask id="round">
    <rect width="<%= image_width %>" height="20" rx="3" fill="#fff"/>
  </mask>
  <g mask="url(#round)">
    <rect width="<%= status_param_width %>" height="20" fill="<%= svg_color_number_left ||"#555" %>"/>
    <rect x="<%= status_param_width %>" width="<%= formatted_downloads_width %>" height="20" fill="<%= svg_color_number || "#4c1" %>"/>
    <rect width="<%= image_width %>" height="20" fill="url(#smooth)"/>
  </g>
  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <%= logo_image_svg %><text x="<%= status_param_and_logo_width_text %>" y="15" fill="#010101" fill-opacity=".3"><%= @status_text %></text>
    <text x="<%= status_param_and_logo_width_text %>" y="14"><%= @status_text %></text>
    <text x="<%= formatted_download_text_width %>" y="15" fill="#010101" fill-opacity=".3"><%= @downloads_text %></text>
    <text x="<%= formatted_download_text_width %>" y="14"><%= @downloads_text %></text>
  </g>
</svg>
